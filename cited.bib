journal = {Remote sensing (Basel, Switzerland)},
keywords = {Algorithms ; ALS ; Classification ; convolutional neural network (CNN) ; deep learning ; digital terrain model (DTM) ; Errors ; Extraction ; ground point classification ; Grounds ; Neural networks ; Terrain ; Three dimensional models},
}

