journal = {Journal of archaeological science},
keywords = {Anthropology ; Archaeology ; Arizona archaeology ; Case studies ; Ceramic materials ; Ceramic typology ; Ceramics ; Convolutional neural networks ; Deep learning ; Geology ; Geosciences, Multidisciplinary ; Life Sciences & Biomedicine ; Neural networks ; Physical Sciences ; Science & Technology ; Social Sciences ; Southwest archaeology ; Tusayan White Ware},
